{
  "name": "specforge",
  "version": "1.0.1",
  "description": "\"Where specs are hammered into real hardware.\" SpecForge is a hardware specification CLI that bridges the gap between innovation and manufacturing. It guides teams from idea through prototype to production with structured templates, BOM tracking, and maturity gates.",
  "main": "dist/index.js",
  "bin": {
    "specforge": "bin/specforge.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:contract": "vitest run tests/contract",
    "test:integration": "vitest run tests/integration",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "hardware",
    "specification",
    "cli",
    "project-management",
    "github"
  ],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/lxander42/SpecForge"
  },
  "homepage": "https://github.com/lxander42/SpecForge#readme",
  "bugs": {
    "url": "https://github.com/lxander42/SpecForge/issues"
  },
  "files": [
    "dist/src/**/*",
    "dist/index.js",
    "dist/index.d.ts",
    "bin/**/*",
    "README.md",
    "LICENSE"
  ],
  "type": "module",
  "oclif": {
    "bin": "specforge",
    "dirname": "specforge",
    "commands": "./dist/src/cli",
    "topicSeparator": " "
  },
  "dependencies": {
    "@oclif/core": "4.5.4",
    "@octokit/graphql": "9.0.1",
    "@octokit/rest": "22.0.0",
    "chalk": "5.6.2",
    "inquirer": "12.9.6",
    "js-yaml": "4.1.0",
    "ora": "9.0.0",
    "undici": "7.16.0",
    "zod": "4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "9.36.0",
    "@types/node": "24.5.2",
    "@typescript-eslint/eslint-plugin": "8.44.1",
    "@typescript-eslint/parser": "8.44.1",
    "eslint": "9.36.0",
    "prettier": "3.6.2",
    "ts-node": "10.9.2",
    "tsx": "4.20.6",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  }
}
